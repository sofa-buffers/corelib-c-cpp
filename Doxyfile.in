# ---------------------------------------------------------
#         SofaBuffers C - Doxygen Configuration
# ---------------------------------------------------------

# Project information
PROJECT_NAME            = "SofaBuffers C/C++"
PROJECT_BRIEF           = "API Documentation"
PROJECT_NUMBER          = "@PROJECT_VERSION@"
PROJECT_LOGO            = "@CMAKE_SOURCE_DIR@/assets/sofabuffers_icon.png"

# Input paths (headers only)
INPUT                   = "@CMAKE_SOURCE_DIR@/src/include" \
                          "@CMAKE_SOURCE_DIR@/README.md"
FILE_PATTERNS           = *.h *.hpp *.md
RECURSIVE               = YES
FULL_PATH_NAMES         = NO
STRIP_FROM_PATH         = "@CMAKE_SOURCE_DIR@/src"

# Output
OUTPUT_DIRECTORY        = "@CMAKE_BINARY_DIR@/docs"
GENERATE_HTML           = YES
GENERATE_LATEX          = NO
GENERATE_XML            = NO

# C-specific options
OPTIMIZE_OUTPUT_FOR_C   = YES
EXTENSION_MAPPING       = h=C
TYPEDEF_HIDES_STRUCT    = NO

# C Standard / Parsing
#CLANG_ASSISTED_PARSING  = YES
#CLANG_OPTIONS           = --std=c99

# Documentation content
EXTRACT_ALL             = YES
EXTRACT_STATIC          = YES
EXTRACT_PRIVATE         = NO
EXTRACT_PACKAGE         = NO
EXTRACT_LOCAL_CLASSES   = NO
EXTRACT_ANON_NSPACES    = NO

# Source code output
SOURCE_BROWSER          = YES
INLINE_SOURCES          = NO
STRIP_CODE_COMMENTS     = NO

# Markdown support
MARKDOWN_SUPPORT        = YES
USE_MDFILE_AS_MAINPAGE  = "@CMAKE_SOURCE_DIR@/README.md"

# Diagrams (Graphviz)
HAVE_DOT                = YES
DOT_IMAGE_FORMAT        = svg
CALL_GRAPH              = YES
CALLER_GRAPH            = YES
CLASS_GRAPH             = YES
DOT_MULTI_TARGETS       = YES

# HTML options
GENERATE_TREEVIEW       = YES
FULL_SIDEBAR            = YES

# Warnings
WARNINGS                = YES
WARN_IF_UNDOCUMENTED    = NO
WARN_NO_PARAMDOC        = YES

# Miscellaneous
QUIET                   = NO
JAVADOC_AUTOBRIEF       = YES
AUTOLINK_SUPPORT        = YES
